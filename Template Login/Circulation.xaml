<Window x:Class="Template_Login.Circulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template_Login"
        mc:Ignorable="d"
        Title="Circulation" Height="475" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Library Circulation" HorizontalAlignment="Left" Width="217" Height="46" Margin="716,59,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Student Name" HorizontalAlignment="Left" Height="23" Margin="736,115,0,0" VerticalAlignment="Top" Width="88"/>
        <Label Content="Book Name" HorizontalAlignment="Left" Height="23" Margin="737,206,0,0" VerticalAlignment="Top" Width="88" VerticalContentAlignment="Center"/>
        <Button x:Name="btnBorrow" Content="Borrow" HorizontalAlignment="Left" Height="40" Margin="736,310,0,0" VerticalAlignment="Top" Width="89" Click="btnBorrow_Click"/>
        <Button x:Name="btnReturn" Content="Return" HorizontalAlignment="Left" Height="40" Margin="844,310,0,0" VerticalAlignment="Top" Width="89"/>
        <ComboBox x:Name="cbBook" HorizontalAlignment="Left" Height="34" Margin="736,239,0,0" VerticalAlignment="Top" Width="196"/>
        <ComboBox x:Name="cbStudent" HorizontalAlignment="Left" Height="34" Margin="736,148,0,0" VerticalAlignment="Top" Width="197" SelectionChanged="cbStudent_SelectionChanged"/>
        <DataGrid x:Name="gridTrasactions" HorizontalAlignment="Left" Height="323" Margin="48,87,0,0" VerticalAlignment="Top" Width="643" SelectionChanged="gridTrasactions_SelectionChanged"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Height="40" Margin="736,366,0,0" VerticalAlignment="Top" Width="197"/>
        <Button Content="Return" HorizontalAlignment="Left" Height="31" Margin="48,38,0,0" VerticalAlignment="Top" Width="97"/>
        <Button Content="View" HorizontalAlignment="Left" Height="23" Margin="824,207,0,0" VerticalAlignment="Top" Width="86"/>
    </Grid>
</Window>
