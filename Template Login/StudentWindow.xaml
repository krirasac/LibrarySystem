<Window x:Class="Template_Login.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template_Login"
        mc:Ignorable="d"
        Title="StudentWindow" Height="530" Width="800">
    <Grid Background="#FF18245B">
        <StackPanel Margin="20">
            <TextBlock x:Name="nameTextBlock" FontWeight="Bold" FontSize="14" Foreground="#FFF1F1F1"/>
            <TextBlock x:Name="contactTextBlock" Foreground="#FFF1F1F1"/>
            <TextBlock x:Name="emailTextBlock" Foreground="#FFF1F1F1"/>
            <TextBlock x:Name="courseTextBlock" Foreground="#FFF1F1F1"/>

            <TextBlock Text="Transaction History:" FontSize="16" Margin="0,20,0,5" Foreground="#FFF1F1F1" FontWeight="Bold"/>
            <DataGrid x:Name="transactionDataGrid" AutoGenerateColumns="True" Height="150"/>

            <TextBlock Text="Overdue Fines:" FontSize="16" Margin="0,20,0,5" FontWeight="Bold" Foreground="#FFF1F1F1"/>
            <DataGrid x:Name="finesDataGrid" AutoGenerateColumns="True" Height="100"/>

            <Button Content="Logout" Width="100" Margin="0,20,0,0" Click="Logout_Click"/>
        </StackPanel>
        <Image Source="/Northville.png" HorizontalAlignment="Left" Height="94" Margin="671,20,0,0" VerticalAlignment="Top" Width="96"/>

    </Grid>
</Window>
